{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "packages/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
