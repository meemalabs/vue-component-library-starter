{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "packages/*"
      ],
      "@ow3/hello-world-vue": [
        "packages/components/src"
      ],
      "@ow3/hello-world-elements": [
        "packages/elements/src"
      ],
      "@ow3/hello-world-composable": [
        "packages/composables/src"
      ],
      "@ow3/stacks-core": [
        "packages/stacks/src"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
