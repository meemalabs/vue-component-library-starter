{
  "name": "@ow3/stacks-monorepo",
  "version": "0.22.1",
  "private": true,
  "packageManager": "pnpm@7.4.0",
  "description": "The easy way to start your component library stack.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/openwebstacks/stacks-framework#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openwebstacks/stacks-framework.git"
  },
  "bugs": {
    "url": "https://github.com/openwebstacks/stacks-framework/issues"
  },
  "keywords": [
    "monorepo",
    "vite",
    "component",
    "library",
    "vue",
    "web components",
    "typescript",
    "javascript",
    "starter kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.4.0"
  },
  "scripts": {
    "dev": "pnpm --filter ./.stacks dev",
    "dev:functions": "pnpm --filter ./.stacks dev:functions",
    "build:functions": "pnpm --filter ./.stacks build:functions",
    "dev:components": "pnpm --filter ./.stacks dev:components",
    "build:components": "pnpm --filter ./.stacks build:components",
    "dev:elements": "pnpm --filter ./.stacks dev:elements",
    "build:elements": "pnpm --filter ./.stacks build:elements",
    "build:playground": "pnpm --filter ./.stacks build:playground",
    "dev:playground": "pnpm --filter ./.stacks dev:playground",
    "build": "pnpm run typecheck && wip",
    "stubs": "pnpm --filter ./.stacks stubs",
    "build:types": "wip",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git cz",
    "coverage": "vitest run --coverage",
    "docs:build": "pnpm --filter ./apps/site build",
    "dev:docs": "pnpm --filter ./apps/site dev",
    "docs:serve": "pnpm --filter ./apps/site serve",
    "example": "esno .stacks/scripts/run-example.ts",
    "fresh": "rimraf .stacks/dist .stacks/types/functions/* .stacks/types/components/* .stacks/node_modules apps/**/node_modules config/node_modules components/dist functions/dist components/node_modules playground/dist playground/node_modules examples/**/node_modules node_modules/ pnpm-lock.yaml && pnpm i",
    "preinstall": "esno .stacks/scripts/check-for-pnpm.ts && esno .stacks/scripts/check-node-version.ts",
    "postinstall": "npx simple-git-hooks ./config/git-hooks.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "npx bumpp .stacks/package.json apps/**/package.json components/package.json examples/**/package.json functions/package.json playground/package.json package.json --execute 'pnpm run changelog' --all",
    "size": "esno .stacks/scripts/size.ts",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "types:fix": "esno .stacks/scripts/fix-types.ts"
  },
  "devDependencies": {
    "stacks": "workspace:*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
