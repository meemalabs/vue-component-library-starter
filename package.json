{
  "name": "@ow3/monorepo",
  "version": "0.22.1",
  "private": true,
  "packageManager": "pnpm@7.3.0",
  "description": "The easy way to start your component library stack.",
  "author": "Chris Breuer",
  "license": "MIT",
  "homepage": "https://github.com/openwebstacks/stacks-framework#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openwebstacks/stacks-framework.git"
  },
  "bugs": {
    "url": "https://github.com/openwebstacks/stacks-framework/issues"
  },
  "keywords": [
    "monorepo",
    "vite",
    "component",
    "library",
    "vue",
    "web components",
    "typescript",
    "javascript",
    "starter kit"
  ],
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "workspaces": [
    ".stacks/*",
    "apps/*",
    "components/*",
    "config/*",
    "examples/*",
    "functions/*",
    "playground/*"
  ],
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.3.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './components/**' -filter './functions/**' --filter './.stacks' run build",
    "build:stacks": "pnpm --filter './.stacks' run build",
    "build:functions": "pnpm --filter './functions' run build",
    "build:components": "pnpm --filter './components' --filter './.stacks/elements' run build",
    "build:vue": "pnpm --filter './components' run build",
    "build:elements": "pnpm --filter './.stacks/elements' run build",
    "build:types": "wip",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git cz",
    "coverage": "vitest run --coverage",
    "deploy": "pnpm run stub && pnpm --filter './playground' build",
    "dev": "pnpm run stub",
    "docs:build": "pnpm --filter './apps/site' build",
    "docs:dev": "pnpm --filter './apps/site' dev",
    "docs:serve": "pnpm --filter './apps/site' serve",
    "example": "esno .stacks/scripts/run-example.ts",
    "fresh": "rimraf .stacks/types/composables/* .stacks/types/components/* apps/**/node_modules config/node_modules components/node_modules examples/**/node_modules .stacks/node_modules node_modules/ pnpm-lock.yaml && pnpm i",
    "preinstall": "esno .stacks/scripts/check-for-pnpm.ts && esno .stacks/scripts/check-node-version.ts",
    "postinstall": "npx simple-git-hooks ./config/git-hooks.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "play": "pnpm --filter './playground' dev",
    "release": "npx bumpp package.json .stacks/package.json components/package.json functions/package.json --execute 'pnpm run changelog' --all",
    "size": "esno .stacks/scripts/size.ts",
    "stub": "pnpm -r --parallel run stub",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "types:fix": "esno .stacks/scripts/fix-types.ts"
  },
  "devDependencies": {
    "@babel/types": "^7.18.4",
    "@iconify-json/heroicons-outline": "^1.1.1",
    "@iconify-json/heroicons-solid": "^1.1.1",
    "@ow3/eslint-config": "^0.27.3",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.39.3",
    "@unocss/transformer-compile-class": "^0.39.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.7.5",
    "bumpp": "^8.2.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.2.0",
    "cz-git": "^1.3.5",
    "eslint": "^8.18.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unocss": "^0.39.3",
    "unplugin-auto-import": "^0.9.0",
    "unplugin-vue-components": "^0.19.6",
    "vite": "^2.9.12",
    "vite-plugin-inspect": "^0.5.0",
    "vitest": "^0.15.2",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
